<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.washington.glassdub.glassdub.WriteReview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/activity_write_interview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Interview Info"
            android:textSize="@string/font_size_title"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/purple"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.075"
            android:id="@+id/interview_info_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.6"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:textSize="@string/font_size_regular"
            android:fontFamily="@string/font_family_regular">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.08"
                android:orientation="horizontal">

                <TextView
                    android:text="*Review For:"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:id="@+id/review_for_text"
                    android:background="@color/colorBackground"/>

                <TextView
                    android:text="* = required"
                    android:textColor="@color/purple"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:id="@+id/required_text"
                    android:background="@color/colorBackground"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:id="@+id/company_job_input_fields">

                <Space
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"/>

                <EditText
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:hint="Company"
                    android:textColor="@color/lightgrey"
                    android:id="@+id/company_request"
                    android:background="@drawable/edittext_bottom_line"
                    />

                <Space
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"/>

                <EditText
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:hint="Job"
                    android:textColor="@color/lightgrey"
                    android:id="@+id/job_request"
                    android:background="@drawable/edittext_bottom_line"/>

                <Space
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:text="*Interview Date"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:id="@+id/interview_dates_text"
                    android:maxLines="100"
                    android:scrollHorizontally="false"/>

                <Spinner
                    android:id="@+id/month_dropdown"
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
                <Spinner
                    android:id="@+id/day_dropdown"
                    android:layout_width="0dip"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
                <Spinner
                    android:id="@+id/year_dropdown"
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
                <Button
                    android:icon="@drawable/ic_add_black_24dp"
                    android:background="@color/white"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:text="*Received offer?"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:id="@+id/offer_text"/>

                <Spinner
                    android:id="@+id/offer_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <Space
                    android:layout_width="0dip"
                    android:maxWidth="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:text="*Overall Experience?"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.3"
                    android:id="@+id/overall_text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <Button
                        android:icon="@drawable/edittext_bottom_line"
                        android:background="@color/white"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:id="@+id/negative_button"/>

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <Button
                        android:icon="@drawable/ic_add_black_24dp"
                        android:background="@color/white"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:id="@+id/neutral_button"/>

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <Button
                        android:icon="@drawable/ic_add_black_24dp"
                        android:background="@color/white"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:id="@+id/positive_button"/>

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.6"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:text="*Difficulty?"
                        android:textStyle="bold"
                        android:textColor="@color/gold"
                        android:layout_height="match_parent"
                        android:layout_width="0dip"
                        android:layout_weight="0.2"
                        android:id="@+id/difficulty_text"/>

                    <TextView
                        android:text="(1 = easy, 5 = difficult)"
                        android:textColor="@color/gold"
                        android:layout_height="match_parent"
                        android:layout_width="0dip"
                        android:layout_weight="0.6"
                        android:id="@+id/difficulty_explanation_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <Button
                        android:icon="@drawable/edittext_bottom_line"
                        android:background="@color/white"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:id="@+id/difficulty_1"/>

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <Button
                        android:icon="@drawable/ic_add_black_24dp"
                        android:background="@color/white"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:id="@+id/difficulty_2"/>

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <Button
                        android:icon="@drawable/ic_add_black_24dp"
                        android:background="@color/white"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:id="@+id/difficulty_3"/>

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <Button
                        android:icon="@drawable/ic_add_black_24dp"
                        android:background="@color/white"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:id="@+id/difficulty_4"/>

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <Button
                        android:icon="@drawable/ic_add_black_24dp"
                        android:background="@color/white"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:id="@+id/difficulty_5"/>

                    <Space
                        android:layout_width="0dip"
                        android:maxWidth="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:text="Overall"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.3"
                    android:id="@+id/comments_text"/>

                <EditText
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:id="@+id/comments_input"
                    android:layout_weight="0.7"
                    android:maxLines="100"
                    android:scrollHorizontally="false"/>

                <Button
                    android:text="Submit"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgrey"
                    android:id="@+id/submit_button" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>