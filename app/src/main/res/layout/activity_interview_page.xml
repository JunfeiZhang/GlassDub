<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interview_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.washington.glassdub.glassdub.InterviewPage"
    android:orientation="vertical">

    <TextView
        android:text="Role/position/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Iposition"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="Type (full, part, internship)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Itype" />

    <TextView
        android:text="Interview Experience (pos, neg, neutr)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Iexperience" />

    <TextView
        android:text="Difficulty (1-5)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Idifficulty" />

    <TextView
        android:text="Got Offer? (Y/N/pending)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Ioffer" />

    <TextView
        android:text="Body (Qs, Pros/Cons)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Ibody" />

    <TextView
        android:text="Username/Anonymous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Iuser" />

    <TextView
        android:text="Created Date/Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Icreated" />
</LinearLayout>
