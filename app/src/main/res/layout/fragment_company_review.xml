<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.washington.glassdub.glassdub.CompanyReview">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CRtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="Rating (1-5)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CRrating" />

        <TextView
            android:text="Salary (estimated)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CRsalary" />

        <TextView
            android:text="Role/position/job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CRposition" />

        <TextView
            android:text="StartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CRstart" />

        <TextView
            android:text="EndDate (if applicable)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CRend" />

        <TextView
            android:text="Review Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CRbody" />

        <TextView
            android:text="Username/Anonymous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CRanonymous" />

    </LinearLayout>

</FrameLayout>
